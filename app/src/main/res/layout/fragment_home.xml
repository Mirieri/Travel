<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:orientation="vertical">



            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/crdProductOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                card_view:contentPadding="2dp">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/etName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Trip Information"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <View
                        android:id="@+id/prdOneD1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/etName"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorAccent" />


                    <TextView
                        android:id="@+id/prdOneContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/prdOneD2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/prdOneContent"
                        android:layout_marginBottom="5dp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/prdOneMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/prdOneD2"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:drawableLeft="@mipmap/ic_launcher"
                        android:drawableStart="@mipmap/ic_launcher"
                        android:drawableTint="@color/colorPrimary"
                        android:drawableTintMode="screen"
                        android:text="View More Savings Products"
                        android:textColor="@color/colorPrimary"
                        android:textIsSelectable="false"
                        android:textSize="16dp"
                        android:visibility="gone" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/crdProductTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                card_view:contentPadding="2dp">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/etName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Passenger Information"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <View
                        android:id="@+id/prdTwoD1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/etName2"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorAccent" />


                    <TextView
                        android:id="@+id/prdTwoContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/prdTwoD2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/prdTwoContent"
                        android:layout_marginBottom="5dp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/prdTwoMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/prdTwoD2"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:drawableLeft="@mipmap/ic_launcher"
                        android:drawableStart="@mipmap/ic_launcher"
                        android:drawableTint="@color/colorPrimary"
                        android:drawableTintMode="screen"
                        android:text="View More Savings Products"
                        android:textColor="@color/colorPrimary"
                        android:textIsSelectable="false"
                        android:textSize="16dp"
                        android:visibility="gone" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/crdProductThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                card_view:contentPadding="2dp">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/etName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Expenses Information"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <View
                        android:id="@+id/prdThreeD1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/etName3"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorAccent" />


                    <TextView
                        android:id="@+id/prdThreeContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/prdThreeD2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/prdThreeContent"
                        android:layout_marginBottom="5dp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/prdThreeMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/prdThreeD2"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:drawableLeft="@mipmap/ic_launcher"
                        android:drawableStart="@mipmap/ic_launcher"
                        android:drawableTint="@color/colorPrimary"
                        android:drawableTintMode="screen"
                        android:text="View More Savings Products"
                        android:textColor="@color/colorPrimary"
                        android:textIsSelectable="false"
                        android:textSize="16dp"
                        android:visibility="gone" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
